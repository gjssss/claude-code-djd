{
  "name": "claude-code-djd",
  "type": "module",
  "version": "0.0.1",
  "description": "claude code cli tool for djd",
  "author": "gjssss <gaojinsong2010@gmail.com>",
  "license": "MIT",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint",
    "prepublishOnly": "nr build",
    "release": "bumpp && pnpm publish",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.10.1",
    "@antfu/ni": "^24.1.0",
    "@antfu/utils": "^9.1.0",
    "@types/node": "^22.13.10",
    "bumpp": "^10.1.0",
    "eslint": "^9.22.0",
    "lint-staged": "^15.5.0",
    "simple-git-hooks": "^2.11.1",
    "tinyexec": "^0.3.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "unbuild": "^3.5.0",
    "vite": "^6.2.1",
    "vitest": "^3.0.8",
    "vitest-package-exports": "^0.1.1",
    "yaml": "^2.7.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
